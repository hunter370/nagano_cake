<h1>商品一覧</h1>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item.id) do %>
         <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price.to_s(:delimited) %></td>
      <td><%= item.genre.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新規登録", new_admin_item_path, class: "btn btn-success" %>
<%= paginate @items %>
