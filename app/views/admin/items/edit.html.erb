<h1>商品編集</h1>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>

<div class="field">
  <h4>商品画像</h4>
  <%= f.file_field :image %>
</div>

<div class="field">
  <h4>商品名</h4>
  <%= f.text_field :name %>
</div>

<div class="field">
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
</div>

<div class="field">
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
</div>

<div class="field">
  <h4>税抜価格</h4>
  <%= f.text_field :price %>円
</div>

<%= f.submit "変更を保存", class: "btn btn-success" %>

<% end %>
