<h1>ジャンル一覧・追加</h1>
<!--ジャンル追加-->
<%= form_with model: @genre, url: admin_genres_path do |f| %>
<h4>ジャンル名</h4>
<%= f.text_field :name %>

<%= f.submit '新規登録', class: "btn btn-success" %>

<% end %>

<!--ジャンル一覧-->
<table border="1" style="border-collapse: collapse">
  <tr>
    <th>ジャンル</th>
  </tr>
 <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
  </tr>
 <% end %>
</table>
