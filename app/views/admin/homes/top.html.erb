<h1>注文履歴一覧</h1>

<table border="1" rules="rows">
  <tbody>
    <% @orders.each do |orders| %>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
    <tr>
      <td>
        <%= link_to admin_order_path(orders.id) do %>
        <%= orders.created_at.strftime('%Y/%m/%d') %>
        <% end %>
        </td>
      <td><%= orders.customer.last_name + orders.customer.first_name %></td>
      <td><%= orders.order_details.inject(0) { |sum, order_details| sum + order_details.quantity } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>
