<h1>配送先編集</h1>

<%= form_with model: @address, url: addresses_update_path, method: :patch do |f| %>

<div class="field">
  <h4>郵便番号(ハイフンなし)</h4>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <h4>住所</h4>
  <%= f.text_field :address %>
</div>

<div class="field">
  <h4>宛名</h4>
  <%= f.text_field :name %>
</div>

<%= f.submit "変更内容を保存", class: "btn btn-success" %>
<% end %>
