<h1>ショッピングカート</h1>

<%= button_to "カートを空にする", cart_item_destroy_all_path, method: :delete, class: "btn btn-danger" %>

<table border="1" style="border-collapse: collapse">
  <tbody>
    <% @cart_items.each do |cart_items| %>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
    <tr>
      <td><%= image_tag cart_items.item.get_image(100,100) %><%= cart_items.item.name %></td>
      <td><%= (cart_items.item.add_tax_price).to_s(:delimited) %></td>
      <td>
        <%= form_with model: cart_items do |f| %>
         <%= f.select :amount, *[1..10] %>
         <%= f.submit "変更", class: "btn btn-success" %>
        <% end %>
      </td>
      <td><%= cart_items.subtotal.to_s(:delimited) %></td>
      <td><%= link_to "削除する", cart_item_path(cart_items), method: :delete, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>

<table border="1" style="border-collapse: collapse">
  <tbody>
    <% @cart_items.each do |cart_items| %>
    <% @total = @total + cart_items.subtotal %>
    <% end %>
    <tr>
      <td>合計金額</td>
      <td><%= @total.to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>

<%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>