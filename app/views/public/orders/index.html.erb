<h1>注文履歴一覧</h1>

<table border="1" style="border-collapse: collapse">
  <tbody>
    <% @orders.each do |orders| %>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
    <tr>
      <td><%= orders.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        〒<%= orders.postal_code %></br>
        <%= orders.address %></br>
        <%= orders.name %>
        </td>
        <td>
          <% orders.items.each do |item| %>
          <p><%= item.name %></p>
          <% end %>
          </td>
        <td><%= orders.billing_amount.to_s(:delimited) %></td>
        
    </tr>
    <% end %>
  </tbody>
</table>