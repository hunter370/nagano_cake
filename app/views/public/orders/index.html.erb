<h1>注文履歴一覧</h1>

<table border="1" style="border-collapse: collapse">
  <tbody>
    <% @orders.each do |orders| %>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
    <tr>
      <td><%= orders.created_at.strftime('%Y/%m/%d') %></td>
      <th>
        〒<%= orders.postal_code %></br>
        <%= orders.address %></br>
        <%= orders.name %>
        </th>
        <!--<th>商品名</th>-->
        <th><%= orders.billing_amount.to_s(:delimited) %></th>
    </tr>
    <% end %>
  </tbody>
</table>