<main>
  <div class="container">
   <h1>商品一覧(全<%= @items.count %>件)</h1>
   <div class="row">
    <% @items.each do |item| %>
     <div class="mr-5 mb-5">
      <%= link_to item_path(item.id) do %>
       <%= image_tag item.get_image(200,200) %>
      <% end %>
     <span class="text-left d-block">
      <%= item.name %>
     </span>
     <span class="text-left d-block">
      ¥<%= item.price %>
     </span>
     </div>
    <% end %>
    <div class="row col-md-12">
    <div class="col-md-3 offset-md-4">
     <%= paginate @items %>
    </div>
    </div>
  </div>
</main>
